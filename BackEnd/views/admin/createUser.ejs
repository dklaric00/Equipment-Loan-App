            <div class="card">
              <div class="card-body flex flex-col gap-6">
                <h6 class="text-lg text-gray-500 font-semibold">Osobni podaci korisnika</h6>
                <div class="card">
                  <div class="card-body">
                    <form action="/admin/createUser/saveUser" method="POST">
                      <!-- Ime -->
                      <div class="mb-6">
                        <label for="forFirstName" class="block text-sm mb-2 text-gray-400"><span
                            class="text-red-500">*</span>
                          Ime: </label>
                        <input type="text" id="forFirstName" name="first_name"
                          class="py-3 px-4 text-gray-500 block w-full border-gray-200 rounded-sm text-sm focus:border-blue-600 focus:ring-0 "
                          placeholder="Unesite ime" aria-describedby="hs-input-helper-text">
                      </div>
                      <!-- Prezime -->
                      <div class="mb-6">
                        <label for="forLastName" class="block text-sm mb-2 text-gray-400">
                          <span class="text-red-500">*</span>
                          Prezime:</label>
                        <input type="text" id="forLastName" name="last_name"
                          class="py-3 px-4 text-gray-500 block w-full border-gray-200 rounded-sm text-sm focus:border-blue-600 focus:ring-0 "
                          placeholder="Unesite prezime" aria-describedby="hs-input-helper-text">
                      </div>
                      <!-- Korisnicko ime -->
                      <div class="mb-6">
                        <label for="forUsername" class="block text-sm mb-2 text-gray-400">
                          <span class="text-red-500">*</span>
                          Korisničko ime:</label>
                        <input type="text" id="forUsername" name="username"
                          class="py-3 px-4 text-gray-500 block w-full border-gray-200 rounded-sm text-sm focus:border-blue-600 focus:ring-0 "
                          placeholder="Unesite korisničko ime" aria-describedby="hs-input-helper-text">
                      </div>
                      <!-- Email -->
                      <div class="mb-6">
                        <label for="forEmail" class="block text-sm mb-2 text-gray-400">
                          <span class="text-red-500">*</span>
                          Email adresa:</label>
                        <input type="email" id="forEmail" name="email"
                          class="py-3 px-4 text-gray-500 block w-full border-gray-200 rounded-sm text-sm focus:border-blue-600 focus:ring-0 "
                          placeholder="Unesite email" aria-describedby="hs-input-helper-text">
                      </div>
                      <!-- Lozinka -->
                      <div class="mb-6">
                        <label for="forPassword" class="block text-sm mb-2 text-gray-400">
                          <span class="text-red-500">*</span>
                          Lozinka:</label>
                        <input type="password" id="forPassword" name="password"
                          class="py-3 px-4 block w-full border-gray-200 rounded-sm text-sm focus:border-blue-600 focus:ring-0 "
                          placeholder="••••••••" aria-describedby="hs-input-helper-text">
                      </div>
                      <!-- Lozinka -->
                      <div class="mb-6">
                        <label for="forContact" class="block text-sm mb-2 text-gray-400">Kontakt broj:</label>
                        <input type="text" id="forContact" name="contact"
                          class="py-3 px-4 block w-full border-gray-200 rounded-sm text-sm focus:border-blue-600 focus:ring-0 "
                          placeholder="Unesite kontakt broj" aria-describedby="hs-input-helper-text">
                      </div>
                      <!-- Uloga -->
                      <div class="mb-6">
                        <label for="forRole" class="block text-sm mb-2 text-gray-400">
                          <span class="text-red-500">*</span>
                          Uloga:</label>
                        <select id="forRole" name="role"
                          class="py-3 px-4 text-gray-500 block w-full border-gray-200 rounded-sm text-sm focus:border-blue-600 focus:ring-0">
                          <option value="employee">Uposlenik</option>
                          <option value="admin">Administrator</option>
                        </select>
                      </div>
                      <button type="submit"
                        class="mt-6 btn text-base py-2.5 text-white font-medium w-fit hover:bg-blue-700">
                        Kreiraj
                      </button>
                    </form>
