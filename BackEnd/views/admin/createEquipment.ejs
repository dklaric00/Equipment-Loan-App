                        <div class="card">
                            <div class="card-body flex flex-col gap-6">
                                <h6 class="text-lg text-gray-500 font-semibold">Podaci o opremi</h6>
                                <div class="card">
                                    <div class="card-body">
                                        <form action="/admin/createEquipment/saveEquipment" method="POST">
                                            <!-- Naziv -->
                                            <div class="mb-6">
                                                <label for="forName" class="block text-sm mb-2 text-gray-400"><span
                                                        class="text-red-500">*</span>
                                                    Oprema: </label>
                                                <input type="text" id="forName" name="name"
                                                    class="py-3 px-4 text-gray-500 block w-full border-gray-200 rounded-sm text-sm focus:border-blue-600 focus:ring-0 "
                                                    placeholder="Unesite naziv" aria-describedby="hs-input-helper-text">
                                            </div>
                                            <!-- Puno ime -->
                                            <div class="mb-6">
                                                <label for="forFullName" class="block text-sm mb-2 text-gray-400">
                                                    <span class="text-red-500">*</span>
                                                    Naziv modela pripadajuće opreme:</label>
                                                <input type="text" id="forFullName" name="full_name"
                                                    class="py-3 px-4 text-gray-500 block w-full border-gray-200 rounded-sm text-sm focus:border-blue-600 focus:ring-0 "
                                                    placeholder="Unesite naziv modela"
                                                    aria-describedby="hs-input-helper-text">
                                            </div>
                                            <!-- Serijski broj -->
                                            <div class="mb-6">
                                                <label for="forSerialNumber" class="block text-sm mb-2 text-gray-400">
                                                    <span class="text-red-500">*</span>
                                                    Serijski broj:</label>
                                                <input type="text" id="forSerialNumber" name="serial_number"
                                                    class="py-3 px-4 text-gray-500 block w-full border-gray-200 rounded-sm text-sm focus:border-blue-600 focus:ring-0 "
                                                    placeholder="Unesite serijski broj"
                                                    aria-describedby="hs-input-helper-text">
                                            </div>
                                            <!-- Stanje -->
                                            <div class="mb-6">
                                                <label for="forCondition" class="block text-sm mb-2 text-gray-400">
                                                    <span class="text-red-500">*</span>
                                                    Stanje opreme:
                                                </label>
                                                <select id="forCondition" name="condition"
                                                    class="py-3 px-4 text-gray-500 block w-full border-gray-200 rounded-sm text-sm focus:border-blue-600 focus:ring-0">
                                                    <option value="true">Ispravno</option>
                                                    <option value="false">Neispravno</option>
                                                </select>
                                            </div>
                                            <!-- Opis -->
                                            <div class="mb-6">
                                                <label for="forDescription" class="block text-sm mb-2 text-gray-400">
                                                    Opis:
                                                </label>
                                                <textarea id="forDescription" name="description"
                                                    class="py-3 px-4 block w-full border-gray-200 rounded-sm text-sm focus:border-blue-600 focus:ring-0"
                                                    placeholder="Dodajte opis..."
                                                    aria-describedby="hs-input-helper-text"></textarea>
                                            </div>
                                            <button type="submit"
                                                class="mt-6 btn text-base py-2.5 text-white font-medium w-fit hover:bg-blue-700">
                                                Dodaj
                                            </button>
